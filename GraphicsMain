import java.awt.*;
import java.io.File;

import javax.imageio.ImageIO;
import javax.swing.*;

public class Board extends JFrame {
	private static Board gameBoard;
	private JPanel masterPanel;

	public static void main(String[] args) {

		gameBoard = new Board();
		gameBoard.setTitle("Monopoly");
		gameBoard.setSize(1300,1300);
		gameBoard.setVisible(true);
		
	}

	public Board() {
		masterPanel = new JPanel();
		masterPanel.setLayout(new GridBagLayout());
		for (int i = 0; i < 10; i++){
			for (int j = 0; j < 10;j++){
				if (i == 0 || i == 9){
					JButton button = new JButton(i + "-" + j);
					button.setSize(new Dimension(50,50));
					GridBagConstraints c = new GridBagConstraints();
					c.gridx = i;
					c.gridy = j;
					c.ipadx = 50;
					c.ipady = 50;
					c.weightx = 0.3;
					c.weighty = 0.3;
					masterPanel.add(button, c);
				}
				else {
					if (j == 0 || j == 9) {
						JButton button = new JButton(i + "-" + j);
						button.setSize(new Dimension(50,50));
						GridBagConstraints c = new GridBagConstraints();
						c.gridx = i;
						c.gridy = j;
						c.ipadx = 50;
						c.ipady = 50;
						c.weightx = 0.3;
						c.weighty = 0.3;
						masterPanel.add(button, c);
					}
				}
			}
		}
		GameSquareButton middleButton = new GameSquareButton ("Monopoly");
		try {
			 Image img = ImageIO.read(new File("images/leicester-square_thumb.png"));
		    middleButton.setIcon(new ImageIcon(img));
		  } catch (Exception ex) {
		    System.out.println(ex);
		  }
		middleButton.setPreferredSize(new Dimension(350,250));
		GridBagConstraints c = new GridBagConstraints();
		c.gridx = 1;
		c.gridy = 1;
		c.gridheight = 8;
		c.gridwidth = 8;
		c.ipadx = 450;
		c.ipady = 350;
		masterPanel.add(middleButton,c);
		this.add(masterPanel);
		
	}

}
