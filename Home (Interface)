import javafx.application.Application;
import javafx.scene.Scene;
import javafx.scene.layout.Pane;
import javafx.scene.paint.Color;
import javafx.scene.text.Text;
import javafx.scene.control.TextField;
import javafx.stage.Stage;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.scene.control.Button;
import javafx.scene.control.Label;

public class Home extends Application{
	
		Scene scene1;
		Scene scene2;
		Pane pane1;
		Pane pane2;
	

	   public static void main(String[] args) {
	      Application.launch(args);
	   }

	   @Override
	   public void start(Stage primaryStage) throws Exception {
	     
		 //make the stage, panes, and scenes
		   
		  primaryStage.setTitle("Monopoly: Home");
	      Pane pane1 = new Pane();
	      Pane pane2 = new Pane();
	      
	      pane1.setStyle("-fx-background-color: SEASHELL;-fx-padding: 10px;");
	      pane2.setStyle("-fx-background-color: PALETURQUOISE;-fx-padding: 10px;");
	     
	      scene1 = new Scene(pane1, 1000, 800, Color.WHITE);
	      scene2 = new Scene(pane2, 1000, 800, Color.WHITE); 
	      
	      //Stuff in Scene 1
	      
	      int extraHeight = 50;
	      
	      for (int x = 1; x < 9; x++){
	    	   
	    	  Button button = new Button();
	    	  button.setText(x + " players");
		      button.setOnAction(new EventHandler<ActionEvent>() {
		    		 
		            @Override
		            public void handle(ActionEvent event) {
		            	
		            	primaryStage.setScene(scene2);
		            	
		            }
		        });
		      
		      button.setLayoutX(scene1.getWidth()/2);
		      button.setLayoutY(scene1.getHeight()/5+extraHeight);
		      
		      pane1.getChildren().add(button);
		      
		      //increments height of button each time
		      extraHeight = extraHeight + 40;
	    	  
	      }
	      
	      //add stuff to pane/scene 1
	      pane1.getChildren().add(new Text(scene1.getWidth()/2 - 20, scene1.getHeight()/5,"How many players?"));
	     
	      
	      //Stuff in Scene 2
	      
	      Button back = new Button();
	      back.setText("Go back"); 
	      back.setOnAction(new EventHandler<ActionEvent>() {
	    		 
	            @Override
	            public void handle(ActionEvent event) {
	            	
	            	primaryStage.setScene(scene1);
	            	
	            }
	        });
	      
	      Label label1 = new Label("Enter your name:");
	      label1.setLayoutX(scene1.getWidth()/2-120);
	      label1.setLayoutY(scene1.getHeight()/5+60);
	      
	      TextField name = new TextField();
	      name.setPromptText("Name");
	      name.getText();
	      name.setLayoutX(scene1.getWidth()/2);
	      name.setLayoutY(scene1.getHeight()/5+60);
	      
	      Button submit = new Button("Submit");
	      submit.setLayoutX(scene1.getWidth()/2);
	      submit.setLayoutY(scene1.getHeight()*3/5);
	      
	  
	   
	      
	      submit.setOnAction(new EventHandler<ActionEvent>() {
	    		 
	            @Override
	            public void handle(ActionEvent event) {
	            	
	            	if (submit.getText().compareTo("heck ya") == 0){
	            		
	            		submit.setText("Submit");;
	            		
	            	}
	            	
	            	else{
	            		
	            		submit.setText("heck ya");
	            		
	            	}
	            
	            }
	        });
	      
	      
	      //add stuff to pane/scene 2
	      pane2.getChildren().add(new Text(scene1.getWidth()/2, scene1.getHeight()/4,"Player 1"));
	      pane2.getChildren().addAll(label1, name);
	      pane2.getChildren().add(back);
	      pane2.getChildren().add(submit);
	      
	   
	      

	      //set stage as scene 1 first and show
	      primaryStage.setScene(scene1);
	      primaryStage.show();
	   }
	   
	  
	   public static void getSecondScene(Scene scene, Stage stage, Pane pane){
		   
		  // scene = new Scene(stage, 1000, 800, Color.WHITE);
		   
		   Button button1 = new Button();
		   button1.setText("heyo");
		   
		  
		   pane.getChildren().add(new Text(scene.getWidth()/2, scene.getHeight()/4,"ayy lmao"));
		   pane.getChildren().add(button1);
		   
		   stage.setScene(scene);
		   stage.show();
		 
		   
	   }
	   
	}
